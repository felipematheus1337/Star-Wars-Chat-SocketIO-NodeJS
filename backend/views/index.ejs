<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Teste SOCKET IO</title>
</head>
<body>
    <h1>Chat Socket IO</h1>
    <div id="chat">

    </div><br>
    <input class="form-control" type="text" name="" id="msg" placeholder="Mensagem:">
    <input class="form-control" type="text" name="" id="username" placeholder="Seu nome de usuÃ¡rio">
    <button onclick="enviar()">Enviar</button>
</body>
<script src="https://cdn.socket.io/4.5.3/socket.io.min.js" integrity="sha384-WPFUvHkB1aHA5TDSZi6xtDgkF0wXJcIIxXhC6h8OT8EH3fC5PWro5pWJ1THjcfEi" crossorigin="anonymous"></script>
<script>
    
    var socket = io("http://localhost:3001");

    socket.on("disconnect",() => {
        console.log("desconectado")
    })

    socket.on("showMessage",(data) => {
        var chat =  document.getElementById("chat");
        var p = document.createElement("p")
        p.innerHTML = data.name + ": "  + data.message;
        chat.append(p);
    })
    


    function enviar() {
        let msg = document.getElementById("msg").value;
        let nome = document.getElementById("username").value;

        socket.emit("message", {
            message:msg,name:nome
        })
    }
</script>
</html>